pipeline{
    agent any
    tools{
	maven 'maven 3.6.1'
	} 

    stages{
        stage(build)
        {
	when{
		changeset "**/worker/**"
	}
             steps
             {
		dir('worker'){
                    sh 'mvn compile'
		}
             }
        }
        stage(test)
        {
             steps
             {
                dir('worker'){
			sh 'mvn clean test'
		}
             }
        }
        stage(package)
        {
	when{
		branch 'master'
	}
             steps
             {
                dir('worker'){
			sh 'mvn package -Dskip test'
		}
             }
        }
       
    }
    post{
        always{
            archiveArtifacts '**/target/*.jar'
        }
    }
}
